<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductCosmeticDiscription"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include

            layout="@layout/view_bottom_anchor"


            />


    </LinearLayout>



    <Button
        android:id="@+id/button_first_cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#03A9F4"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Add to cart"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cosdescription" />

    <ImageView
        android:id="@+id/mainPhoto"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/cosmetic_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cosmeticItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Product Name"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainPhoto" />

    <TextView
        android:id="@+id/tv_cosdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Short Description "
        android:textSize="20dp"
        android:textColor="@color/holo_green_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cosmeticItemTitle"
        android:layout_marginTop="14dp"
        android:layout_marginStart="20dp"


        />


    <TextView
        android:id="@+id/cosPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/button_first_cos"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="$4.99" />



</androidx.constraintlayout.widget.ConstraintLayout>